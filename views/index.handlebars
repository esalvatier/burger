<h1 class="text-center">Eat-Da-Burger!</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers to be devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-eaten-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>